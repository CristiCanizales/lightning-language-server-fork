{
  "name": "lwc-language-server",
  "version": "1.7.0",
  "description": "Language Server Protocol implementation for LWC projects",
  "main": "lib/shared.js",
  "typings": "lib/shared.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p . && node ./scripts/copy_typings.js && cp -r src/resources lib/",
    "prepare": "yarn clean && yarn build",
    "test": "jest --runInBand src",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__test__/**/* src",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test"
  },
  "dependencies": {
    "@salesforce/apex": "0.0.7",
    "@salesforce/label": "0.0.7",
    "@salesforce/resourceurl": "0.0.7",
    "@salesforce/schema": "0.0.7",
    "@salesforce/user": "0.0.7",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-transform-lwc-class": "0.29.18",
    "camelcase": "5.0.0",
    "comment-parser": "0.5.0",
    "deep-equal": "1.0.1",
    "fs-extra": "5.0.0",
    "glob": "7.1.3",
    "lodash": "4.17.11",
    "lwc-compiler": "0.29.18",
    "lwc-engine": "0.29.18",
    "lwc-template-compiler": "0.29.18",
    "properties": "1.2.1",
    "semver": "5.5.1",
    "tmp": "0.0.33",
    "vscode-languageserver": "5.1.0",
    "vscode-nls": "4.0.0",
    "vscode-uri": "1.0.6",
    "xml2js": "0.4.19"
  },
  "devDependencies": {
    "@types/babel-types": "7.0.4",
    "@types/deep-equal": "1.0.1",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "5.0.35",
    "@types/jest": "23.3.1",
    "@types/lodash": "4.14.116",
    "@types/node": "8.10.0",
    "@types/semver": "5.5.0",
    "@types/tmp": "0.0.33",
    "@types/xml2js": "0.4.3",
    "babel-types": "6.26.0",
    "husky": "1.1.0",
    "jest": "23.6.0",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "ts-jest": "23.10.3",
    "tslint": "5.11.0",
    "typescript": "3.1.1"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/matchers.ts",
    "testURL": "http://localhost"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn format",
      "git add"
    ]
  }
}
