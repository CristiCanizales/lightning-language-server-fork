{
  "name": "lightning-lsp-common",
  "version": "1.0.4",
  "description": "Common Indexer for Lightning LSPs",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib && rm -rf src/resources/sfdx/typings/copied",
    "build": "tsc -p . && cp -r src/resources lib/",
    "prepare": "npm run clean && npm run build",
    "test": "jest --runInBand src",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__test__/**/* src",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "npm run prepare && npm run lint"
  },
  "dependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/lodash.template": "^4.4.4",
    "decamelize": "^2.0.0",
    "deep-equal": "^1.0.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "lodash.template": "^4.4.0",
    "lodash.templatesettings": "^4.1.0",
    "properties": "^1.2.1",
    "semver": "^5.6.0",
    "vscode-languageserver": "^5.2.1"
  },
  "devDependencies": {
    "@types/decamelize": "^1.2.0",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/jest": "^23.3.12",
    "@types/lodash": "^4.14.119",
    "@types/semver": "^5.5.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/matchers.ts",
    "testURL": "http://localhost"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn format",
      "git add"
    ]
  }
}
