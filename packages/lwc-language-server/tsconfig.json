{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es2016"
        ],
        "outDir": "./lib",

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,

        "pretty": true,
        "declaration": true
    },

    "include": [
        "src/**/*ts"
    ],

    "exclude": [
        "node_modules"
    ]
}