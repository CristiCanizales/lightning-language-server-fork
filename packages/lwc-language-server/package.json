{
  "name": "raptor-language-server",
  "version": "0.6.1",
  "description": "Language Server Protocol implementation for Raptor projects",
  "main": "lib/server.js",
  "typings": "lib/server.d.ts",
  "repository": "git@git.soma.salesforce.com:raptor/raptor-language-server.git",
  "author": "Pierre-Marie <p.dartus@salesforce.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p . && cp -r src/resources lib/",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --single-quote --tab-width 4 --trailing-comma all --parser typescript --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/babel-types": "6.25.1",
    "raptor-compiler": "0.16.3",
    "vscode-languageserver": "3.5.0",
    "vscode-nls": "^2.0.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "8.0.51",
    "babel-types": "6.25.0",
    "jest": "^21.1.5",
    "prettier": "1.7.4",
    "ts-jest": "21.1.4",
    "tslint": "5.8.0",
    "typescript": "2.6.1"
  },
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
