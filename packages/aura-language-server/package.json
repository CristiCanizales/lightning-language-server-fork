{
  "name": "aura-language-server",
  "version": "1.0.0",
  "description": "Language Server Protocol implementation for Lightning projects",
  "main": "lib/shared.js",
  "typings": "lib/shared.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc-transpile-only && npm run copy-static-assets",
    "tsc": "tsc -p . && npm run copy-static-assets",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "prepare": "npm run clean && npm run build",
    "test": "jest --passWithNoTests --runInBand src",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__test__/**/* src",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "npm run prepare && npm run lint && npm run test"
  },
  "dependencies": {
    "@types/shelljs": "^0.8.1",
    "@types/tern": "^0.22.1",
    "camelcase": "5.0.0",
    "comment-parser": "0.5.0",
    "deep-equal": "1.0.1",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "lightning-lsp-common": "^1.0.2",
    "line-column": "^1.0.2",
    "lodash": "4.17.10",
    "properties": "1.2.1",
    "semver": "5.5.0",
    "shelljs": "^0.8.3",
    "tern": "^0.23.0",
    "tmp": "0.0.33",
    "ts-node": "^7.0.1",
    "typescript-transpile-only": "0.0.4",
    "vscode-languageserver": "4.4.0",
    "vscode-nls": "3.2.4",
    "vscode-uri": "1.0.5",
    "xml2js": "0.4.19"
  },
  "devDependencies": {
    "@types/babel-types": "7.0.4",
    "@types/deep-equal": "1.0.1",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "5.0.35",
    "@types/jest": "23.3.1",
    "@types/lodash": "4.14.116",
    "@types/node": "8.10.0",
    "@types/semver": "5.5.0",
    "@types/tmp": "0.0.33",
    "@types/xml2js": "0.4.3",
    "babel-types": "6.26.0",
    "husky": "0.14.3",
    "jest": "23.4.2",
    "lint-staged": "8.1.0",
    "prettier": "^1.14.2",
    "ts-jest": "23.1.3",
    "tslint": "5.11.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/matchers.ts",
    "testURL": "http://localhost"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format",
      "git add"
    ]
  }
}
