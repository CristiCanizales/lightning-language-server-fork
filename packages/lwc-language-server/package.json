{
  "name": "lwc-language-server",
  "version": "1.0.2",
  "description": "Language Server Protocol implementation for LWC projects",
  "main": "lib/shared.js",
  "typings": "lib/shared.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p . && cp node_modules/lwc-engine/types/engine.d.ts src/resources/sfdx/typings/engine.d.ts && cp -r src/resources lib/",
    "prepare": "npm run clean && npm run build",
    "test": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__test__/**/* src",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --single-quote --print-width 160 --tab-width 4 --trailing-comma all --parser typescript --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "npm run prepare && npm run lint && npm test"
  },
  "dependencies": {
    "deep-equal": "1.0.1",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "lint-staged": "7.0.0",
    "lodash": "4.17.5",
    "properties": "1.2.1",
    "semver": "5.5.0",
    "tmp": "0.0.33",
    "vscode-languageserver": "3.5.0",
    "vscode-nls": "3.2.1",
    "vscode-uri": "1.0.1",
    "xml2js": "0.4.19"
  },
  "devDependencies": {
    "@types/babel-types": "7.0.1",
    "@types/deep-equal": "1.0.1",
    "@types/fs-extra": "5.0.1",
    "@types/glob": "5.0.35",
    "@types/jest": "22.1.3",
    "@types/lodash": "4.14.104",
    "@types/node": "9.4.6",
    "@types/semver": "5.5.0",
    "@types/tmp": "0.0.33",
    "@types/xml2js": "0.4.2",
    "babel-types": "6.26.0",
    "husky": "0.14.3",
    "jest": "^22.4.2",
    "lwc-engine": "0.18.0-beta.2da95760",
    "prettier": "1.11.0",
    "ts-jest": "22.4.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/matchers.ts"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format",
      "git add"
    ]
  }
}
