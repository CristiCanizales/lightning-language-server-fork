{
  "name": "raptor-language-server",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for Raptor projects",
  "main": "lib/server.js",
  "typings": "lib/server.d.ts",
  "repository": "git@git.soma.salesforce.com:raptor/raptor-language-server.git",
  "author": "Pierre-Marie <p.dartus@salesforce.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p .",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "lint": "tslint src/**",
    "format": "prettier --single-quote --tab-width 4 --trailing-comma all --parser typescript --write \"src/**/*.ts\""
  },
  "dependencies": {
    "parse5": "^3.0.2",
    "raptor-template-compiler": "^0.11.1",
    "vscode-languageserver": "^3.2.2"
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "@types/node": "^7.0.28",
    "babel-types": "^6.25.0",
    "jest": "^20.0.4",
    "prettier": "^1.4.2",
    "ts-jest": "^20.0.5",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  },
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
