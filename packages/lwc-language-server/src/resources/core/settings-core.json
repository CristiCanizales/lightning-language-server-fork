{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/core/build/repository/**": true,
        "**/core/ext/**": true,
        "**/target/**": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/core/build/repository/**": true,
        "**/core/ext/**": true,
        "**/target/**": true
    },
    "files.useExperimentalFileWatcher": true
}
