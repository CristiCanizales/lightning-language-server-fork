{
  "name": "lwc-language-server",
  "version": "0.10.0",
  "description": "Language Server Protocol implementation for LWC projects",
  "main": "lib/server.js",
  "typings": "lib/server.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p . && cp node_modules/lwc-engine/types/engine.d.ts src/resources/sfdx/typings/engine.d.ts && cp -r src/resources lib/",
    "prepare": "npm run clean && npm run build",
    "test": "jest --silent --verbose --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__test__/**/* src",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --single-quote --tab-width 4 --trailing-comma all --parser typescript --write \"src/**/*.ts\"",
    "prepush": "npm run prepare && npm run lint && npm test"
  },
  "dependencies": {
    "@types/babel-types": "6.25.1",
    "@types/fs-extra": "4.0.2",
    "@types/glob": "^5.0.33",
    "@types/xml2js": "^0.4.2",
    "fs-extra": "4.0.2",
    "glob": "^7.1.2",
    "vscode-languageserver": "3.5.0",
    "vscode-nls": "^2.0.2",
    "vscode-uri": "^1.0.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "8.0.51",
    "babel-types": "6.25.0",
    "husky": "^0.14.3",
    "jest": "^21.1.5",
    "lwc-engine": "0.17.3",
    "prettier": "1.7.4",
    "ts-jest": "21.1.4",
    "tslint": "5.8.0",
    "typescript": "2.6.1"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/matchers.ts"
  }
}
