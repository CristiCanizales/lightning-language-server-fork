{
  "name": "lwc-language-server",
  "version": "1.6.4",
  "description": "Language Server Protocol implementation for LWC projects",
  "main": "lib/shared.js",
  "typings": "lib/shared.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p . && cp node_modules/lwc-engine/types/engine.d.ts src/resources/sfdx/typings/engine.d.ts && cp -r src/resources lib/",
    "prepare": "yarn clean && yarn build",
    "test": "jest --runInBand src",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__test__/**/* src",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test"
  },
  "dependencies": {
    "camelcase": "5.0.0",
    "deep-equal": "1.0.1",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "lodash": "4.17.10",
    "properties": "1.2.1",
    "semver": "5.5.0",
    "tmp": "0.0.33",
    "vscode-languageserver": "4.3.0",
    "vscode-nls": "3.2.4",
    "vscode-uri": "1.0.5",
    "lwc-compiler": "0.24.12",
    "lwc-template-compiler": "0.24.12",
    "lwc-engine": "0.24.12",
    "babel-plugin-transform-lwc-class": "0.24.12",
    "babel-core": "7.0.0-bridge.0",
    "xml2js": "0.4.19",
    "comment-parser": "0.5.0"
  },
  "devDependencies": {
    "@types/babel-types": "7.0.1",
    "@types/deep-equal": "1.0.1",
    "@types/fs-extra": "5.0.2",
    "@types/glob": "5.0.35",
    "@types/jest": "23.1.5",
    "@types/lodash": "4.14.108",
    "@types/node": "8.10.0",
    "@types/semver": "5.5.0",
    "@types/tmp": "0.0.33",
    "@types/xml2js": "0.4.2",
    "babel-types": "6.26.0",
    "husky": "0.14.3",
    "jest": "23.4.0",
    "lint-staged": "7.2.0",
    "prettier": "1.13.7",
    "ts-jest": "23.0.0",
    "tslint": "5.10.0",
    "typescript": "2.9.2"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/matchers.ts"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn format",
      "git add"
    ]
  }
}
